module bfd {

  yang-version "1";

  // namespace
  namespace "http://frinx.io/yang/bfd";

  prefix "bfd";

  // import some basic types
  import ietf-inet-types { prefix "inet"; }
  import openconfig-interfaces { prefix oc-if; }
  import openconfig-if-aggregate { prefix oc-lag; }
  import yang-ext { prefix ext; }

  // meta
  organization "Frinx s.r.o";

  contact
    "support@frinx.io";

  description
    "Bidirectional Forwarding Detection (BFD) implementation
    based on OpenConfig interfaces";

  revision "2017-10-24" {
    description
      "Initial release";
    reference "3.1.1";
  }

  // grouping statements

  grouping bfd-config {
    leaf local-address {
      type inet:ip-address;
      description
        "Source address for BFD sessions.
        By default, IP address of interface with BFD session is used.";
    }

    leaf destination-address {
      type inet:ip-address;
      description
        "Destination address for BFD sessions";
    }

    leaf multiplier {
      type uint32;
      description
       "Detection multiplier for BFD sessions";
    }

    leaf min-interval {
      type uint32;
      units "milliseconds";
      description
        "Interval for sending BFD packets (in milliseconds)";
    }
  }

  grouping bfd-state {
    description
      "BFD related operational state";

    //TODO: placeholder for operational state related to BFD
  }

  grouping bfd-top {
    description
      "Top-level grouping for BFD data";

    container bfd {
      description
        "Enclosing container for BFD interface-specific
        data.";

      container config {
          description "Configuration parameters for BFD";

          uses bfd-config;
      }

      container state {

        config false;
        description "State variables for BFD";

        uses bfd-config;
        uses bfd-state;
      }
    }
  }

  // augment statements

  augment "/oc-if:interfaces/oc-if:interface/oc-lag:aggregation" {
    when "oc-if:type = 'ift:ieee8023adLag'" {
      description "Active when the interface is a LAG";
    }
    ext:augment-identifier "if-lag-bfd-aug";
    description "Adds BFD settings to a LAG interface";

    uses bfd-top;
  }
}